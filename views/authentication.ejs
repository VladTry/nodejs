<div class="container">
	<form method="POST" class="form-group" action="/login">
		<div class="form-group">
			<input 
				type="text" 
				class="form-control" 
				name="login" 
				placeholder="Login"
			>
		</div>
		<div class="form-group">
			<input 
				type="text" 
				name="password" 
				class="form-control" 
				placeholder="Password"
			>
		</div>
		<div class="form-group">
			<input 
				type="submit"
				class="btn btn-success form-control" 
				value="Login"
			>
		</div>
	</form>
</div>
